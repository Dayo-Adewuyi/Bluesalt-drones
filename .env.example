# Server
PORT=3000
NODE_ENV=development

# Database
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=drones
# DB_USER=postgres
# DB_PASSWORD=password

# Battery Check Job
BATTERY_CHECK_CRON=*/1 * * * *

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis (optional â€” set REDIS_ENABLED=false to run without Redis)
REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# BullMQ
QUEUE_PREFIX=drone-dispatch
